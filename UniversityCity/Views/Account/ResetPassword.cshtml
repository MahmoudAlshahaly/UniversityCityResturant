@model UniversityCity.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "تغير كلمة المرور الخاصة بك ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Code)

    <div class="wrapper">

        <section class="signIn">
            <div class="form">
                <div class="container">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <h5 style="text-align:center;">تغير كلمة المرور</h5>
                    </div>
                    <div class="form-group">
                        <div class="field">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "البريد الالكترونى" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="field">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "كلمة المرور" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="field">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "تأكيد كلمة المرور" })
                        </div>
                    </div>
                    <div class="submit">
                        <input class="enter btn btn-success" type="submit" value="تغير" />
                    </div>
                </div>
            </div>
        </section>

    </div>

}


