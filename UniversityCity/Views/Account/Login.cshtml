@using UniversityCity.Models
@model LoginViewModel
@{
    ViewBag.Title = "تسجيل الدخول";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@if (!User.Identity.IsAuthenticated)
{


    using (Html.BeginForm("Login", "Account","", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()


                <div class="wrapper">

                    <section class="signIn">
                        <div class="form">
                            <div class="container">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @if (ViewBag.Message != null)
                                {
                                    <div class="shadow-lg p-3 mb-5 bg-white rounded">
                                        <h5 style="text-align:center;">@ViewBag.Message</h5>
                                    </div>

                                    <div class="alert alert-danger">
                                        <p class="" style="text-align:center;">@ViewBag.Message</p>
                                    </div>
                                }
                                <div class="form-group">
                                    <h5 style="text-align:center;">تسجيل الدخول</h5>

                                </div>
                                <div class="form-group">
                                    <div class="field">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "اسم المستخدم" })
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="field">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "كلمة المرور" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <a class="forgotPass" href="~/Account/ForgotPassword">نسيت كلمة المرور؟</a>
                                    @*@Html.ActionLink("نسيت كلمة المرور ؟", "ForgotPassword")*@
                                </div>
                                <div class="remMe">
                                    <ul class="checkList">
                                        <li>
                                            <label for="rem">
                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                <p>تذكرني</p>
                                            </label>
                                        </li>
                                    </ul>
                                </div>

                                <div class="submit">
                                    <input class="enter" type="submit" value="تسجيل الدخول" />

                                    <div class="newUser">
                                     @*   <a class="link" href="~/Account/Register" >سجل الآن</a>*@
                                        @Html.ActionLink("سجل الآن", "Register" ,new { @class= "link" })

                                    </div>
                                </div>


                            </div>
                        </div>
                    </section>

                </div>
    }

}