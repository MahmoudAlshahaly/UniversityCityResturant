@model UnivercityCityFood.Models.UserSDN
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@if (!User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Index", "ConfirmSDN"))
    {
        @Html.AntiForgeryToken()


        <div class="wrapper">

            <section class="signIn">
                <div class="form">
                    <div class="container">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @if (ViewBag.Message != null)
                         {

                            @*<div class="alert alert-danger">
                                    <p class="H" style="text-align:center;position:center;">
                                        @ViewBag.Message
                                    </p>
                                </div>*@
                            <div class="shadow-lg p-3 mb-5 bg-white rounded">
                                <h5 style="text-align:center; color:#1c5e84;">@ViewBag.Message</h5>
                            </div>
                         }
                        <div class="form-group">
                            <h5 style="text-align:center;">التاكد من الهاوية</h5>

                        </div>
                        <div class="form-group">
                            <div class="field">
                                @Html.Editor("txt_UID", new { htmlAttributes = new { @class = "form-control", @placeholder = "الرقم القومي" } })
                                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                                @Html.ValidationMessage("", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="field">
                                @*  @Html.LabelFor(m => m.UserGroup, new { @class = "col-md-4 control-label" })*@
                                @Html.DropDownList("UserGroup", null, new { @class = "form-control" })
                            </div>

                            <p>
                                @Html.ActionLink("تسجيل دخول", "Login", "Account")
                            </p>
                        </div>

                        <div class="submit">
                            <input type="submit" value="بحث" class="btn btn-danger" />
                        </div>
                    </div>

                </div>

            </section>
        </div>


    }
}