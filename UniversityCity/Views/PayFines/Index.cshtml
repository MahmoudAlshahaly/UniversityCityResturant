@model IEnumerable<UnivercityCityFood.Models.PayFine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container">

    @using (Html.BeginForm("Index", "PayFines", FormMethod.Get))
    {
        <div class="col-12">
            <div class="row">
                <div class="col-md-6 col-xl-4">
                    <div class="form-group">
                        <h5>الرقم القومي</h5>
                        <div class="field">
                            <input type="text" name="search" class="custom" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-4">
                    <div class="form-group">
                        <h5>من</h5>
                        <div class="field">
                            <input type="date" name="start" class="form-control" />

                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-4">
                    <div class="form-group">
                        <h5>الى</h5>
                        <div class="field">
                            <input type="date" name="end" class="custom" />

                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="actions">
                        <input type="submit" name="submit" value="بحث" class="btn btn-danger action" />
                    </div>
                </div>
            </div>
        </div>


    }




    <div class="col-12">
        <div class="tableList">
            <table class="table table-striped table-borderd text-center">
                <thead>
                    <tr>

                        <th>
                            اليوم
                        </th>
                        <th>
                            الرقم القومى
                        </th>
                        <th>
                            اسم الطالب
                        </th>

                        <th>
                            تاريخ الغرامة
                        </th>
                        <th>
                            الدفع
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Day.DayName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayFineDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PayFineDone)
                            </td>
                            <td>
                                @if (item.PayFineDone == false)
                                {
                                    @Html.ActionLink("دفع الغرامة", "Edit", new { id = item.PayFineID }, new { @class = "btn btn-primary" })
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            @if (ViewBag.countOfStudentPayDone != null)
            {
                <div class="stCount">
                    عدد الغرامات المدفوعة:
                    <span>@ViewBag.countOfStudentPayDone  </span>
                </div>

            }
            @if (ViewBag.countOfStudentPayNotDone != null)
            {

                <div class="stCount">
                    عدد الغرامات الغير مدفوعة:

                    <span>@ViewBag.countOfStudentPayNotDone  </span>

                </div>
            }
            @if (ViewBag.countOfStudentPayNotDone != null)
            {


                <div class="stCount">
                    عدد الغرامات المدفوعة والغير:

                    <span>@ViewBag.countOfStudentPayNotDone  </span>

                </div>
            }
        </div>
    </div>

</div>

