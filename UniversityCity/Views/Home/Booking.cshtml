@model UnivercityCityFood.Models.BookingFood

@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    string photoNumber = Session["dayId"] + ".jpg";
    string description = (string)Session["Description"];
    <section class="meals">
        <div class="container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (ViewBag.Message != null)
                {

                    <div class="shadow-lg p-3 mb-5 bg-white rounded">
                        <h5 style="text-align:center; color:#1c5e84;">@ViewBag.Message</h5>
                    </div>

                }
            <h3>الوجبة</h3>

            <div class="mealSlides" id="mealSlides">
                <div class="meal-block">
                    <div class="mealImg" style="background-image: url('../../Content/imgs/intro/@photoNumber')"></div>
                    <h2>@Html.DisplayFor(model => model.day.DayDescription)</h2>

                    <p>
                        <h5>
                            @description
                        </h5>

                    </p>
                    <p>
                        @Html.HiddenFor(model => model.Booked)
                    </p>
                    <div class="actions">
                        <input type="submit" value="احجز الوجبة الان" class="btn btn-dark" />
                        @Html.ActionLink("العودة", "Index", "", new { @class = "btn btn-danger" })

                    </div>
                </div>

            </div>
        </div>
    </section>



}
