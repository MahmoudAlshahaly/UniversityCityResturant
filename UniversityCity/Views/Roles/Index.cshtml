 @model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="container">
    @Html.ActionLink("انشاء جديد", "Create", "", new { @class = "btn btn-danger" })


    <div class="col-12">
        <div class="tableList">
            <table class="table table-striped table-borderd text-center">
                <thead>
                    <tr>
                        <th>
                            نوع المستخدم
                        </th>

                        <th>
                            العمليات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-danger" }) |
                                @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-success" })

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    </div>

