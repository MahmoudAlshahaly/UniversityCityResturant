@model UnivercityCityFood.Models.UserSDN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="signUp">
        <div class="form">
            <div class="container">
                <div class="row">

                    <div class="col-md-6 col-xl-4">
                        <div class="data-view">
                            <h5>الرقم القومى</h5>
                            <div class="field">
                                @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-4">
                        <div class="data-view">
                            <h5>نوع المستخدم</h5>
                            <div class="field">
                                @Html.EditorFor(model => model.DayName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-4">
                        <div class="data-view">
                            <h5>التأكيد</h5>
                            <div class="field">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.UserIDConfirm)
                                    @Html.ValidationMessageFor(model => model.UserIDConfirm, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="actions">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                    @Html.ActionLink("عودة", "Index", "", new { @class = "btn btn-danger" })

                </div>
            </div>
        </div>
    </section>


}


