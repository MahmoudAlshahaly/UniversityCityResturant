@model UnivercityCityFood.Models.UserSDN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="sendComplain">
        <div class="container">
            <h3>انشاء</h3>

            <div class="row">

                <div class="col-md-6">
                    <div class="form">
                        <div class="data-view">
                            <h5>الرقم القومى</h5>
                            <div class="field">
                                @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="data-view">
                            <h5>نوع المستخدم</h5>
                            <div class="field">

                                @Html.DropDownList("UserGroup", null, new { @class = "form-control" })


                            </div>
                        </div>
                        <div class="data-view">
                            <h5>نوع المستخدم</h5>
                            <div class="field">

                                <div class="checkbox">
                                    @Html.EditorFor(model => model.UserIDConfirm)
                                    @Html.ValidationMessageFor(model => model.UserIDConfirm, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>
                        <div class="actions">
                            <input type="submit" value="حفظ" class="btn btn-primary" />
                            @Html.ActionLink("عودة", "Index", "", new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}


