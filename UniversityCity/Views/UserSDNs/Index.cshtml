@model IEnumerable<UnivercityCityFood.Models.UserSDN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}






<div class="container">

    @using (Html.BeginForm("Index", "UserSDNs", FormMethod.Get))
    {

        <div class="col-12">
            <div class="row">
                <div class="col-md-6 col-xl-4">
                    <div class="form-group">
                        <h5>الرقم القومي</h5>
                        <div class="field">
                            <input type="text" name="search" class="custom" />
                        </div>
                    </div>
                </div>
               
                
                <div class="col-12">
                    <div class="actions">
                        <input type="submit" name="submit" value="بحث" class="btn btn-danger action" />
                    </div>
                </div>
            </div>
        </div>

    }

    <div class="col-12">
        @Html.ActionLink("انشاء جديد", "Create", "", new { @class = "btn btn-danger" })


        <div class="tableList">
            <table class="table table-striped table-borderd text-center">
                <thead>
                    <tr>

                        <th>
                           الرقم القومى
                        </th>
                        <th>
                           نوع المستخدم
                        </th>
                        <th>
                            التأكيد
                        </th>
                        <th>
                            العمليات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="H">
                            <td>
                                @Html.DisplayFor(modelItem => item.UserID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserGroup)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserIDConfirm)
                            </td>
                            <td>
                                @Html.ActionLink("تعديل", "Edit", new { id = item.ID }, new { @class = "btn btn-danger" }) 
                                @Html.ActionLink("تفاصيل", "Details", new { id = item.ID }, new { @class = "btn btn-primary" }) 
                                @Html.ActionLink("حذف", "Delete", new { id = item.ID }, new { @class = "btn btn-warning" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>

</div>