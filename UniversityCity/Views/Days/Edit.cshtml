@model UnivercityCityFood.Models.Day

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DayID)


    <section class="signUp">
        <div class="form">
            <div class="container">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">

                    <div class="col-md-6 col-xl-4">
                        <div class="data-view">
                            <h5>اليوم</h5>
                            <div class="field">
                                @Html.EditorFor(model => model.DayName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-4">
                        <div class="data-view">
                            <h5>تفاصيل اليوم</h5>
                            <div class="field">
                                @*<textarea class="custom"  placeholder="نص الشكوي"></textarea>*@
                                @Html.TextAreaFor(model => model.DayDescription, new { htmlAttributes = new { @class ="custom" } })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="actions">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                    @Html.ActionLink("عودة", "Index","", new { @class = "btn btn-danger" })

                </div>
            </div>
        </div>
    </section>
}


